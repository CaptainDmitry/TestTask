@model List<CurrencyRate>

<a asp-action="Index">Валюты</a>
<a asp-action="SearchCurrency">Поиск</a>

@using (Html.BeginForm("LoadCurrencyRate", "Home", FormMethod.Post))
            {
                <button type="submit" name="Load">Загрузить курсы валют</button>
            }
<form method="post">
    <table>
        <tr>
            <td>Id</td>
            <td>Date</td>
            <td>NumCode</td>
            <td>CharCode</td>
            <td>Nominal</td>
            <td>Name</td>
            <td>Value</td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.date.ToShortDateString()</td>
                <td>@item.currency.ISO_Num_Code</td>
                <td>@item.currency.ISO_Char_Code</td>
                <td>@item.currency.Nominal</td>
                <td>@item.currency.Name</td>
                <td>@item.Value</td>                
                <td><button type="submit" asp-route-id="@item.Id">Удалить</button></td>
            </tr>
        }
    </table>
</form>